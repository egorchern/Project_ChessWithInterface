<Window x:Name="ColorSelectionDialog" x:Class="Project_ChessWithInterface.PlayerColorSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_ChessWithInterface"
        mc:Ignorable="d"
        Title="PlayerColorSelectionDialog" Height="300" Width="745.902" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label"  HorizontalAlignment="Left" Margin="155,55,0,0" VerticalAlignment="Top" FontWeight ="Bold" FontSize="25"
               Content="What color do you want to play as?" Grid.ColumnSpan="2"
               />
        <Button x:Name="WhiteKing_btn" Background="Transparent"  HorizontalAlignment="Left" Margin="159,124,0,0" VerticalAlignment="Top" Width="89" Height="89" BorderBrush="Transparent"/>
        <Button x:Name="BlackKing_btn" Background="Transparent"  HorizontalAlignment="Left" Margin="62,124,0,0" VerticalAlignment="Top" Width="89" Height="89" BorderBrush="Transparent" Grid.Column="1"/>


    </Grid>
</Window>
